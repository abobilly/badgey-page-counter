<Window x:Class="PageCounterPro.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PageCounterPro.UI.Views"
        xmlns:vm="clr-namespace:PageCounterPro.UI.ViewModels"
        mc:Ignorable="d"
        Title="PageCounter Pro" 
        Height="700" 
        Width="1100"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    
    <Window.Resources>
        <views:StringToBoolConverter x:Key="StringToBoolConverter"/>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Logo and App Name -->
                <StackPanel Grid.Row="0" Margin="16,20,16,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Image Grid.Column="0" 
                               Source="/Resources/logo.png"
                               Width="40" Height="40"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="PageCounter"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Pro"
                                       FontSize="12"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       FontWeight="SemiBold"
                                       Margin="0,-2,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                
                <!-- Navigation Items -->
                <StackPanel Grid.Row="1" Margin="8,0">
                    <RadioButton x:Name="ScanNav"
                                 Style="{StaticResource NavButtonStyle}"
                                 IsChecked="{Binding CurrentView, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Scan}"
                                 Command="{Binding NavigateToScanCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“„" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Scan Folder"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <RadioButton Style="{StaticResource NavButtonStyle}"
                                 IsChecked="{Binding CurrentView, Converter={StaticResource StringToBoolConverter}, ConverterParameter=History}"
                                 Command="{Binding NavigateToHistoryCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="History"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <RadioButton Style="{StaticResource NavButtonStyle}"
                                 IsChecked="{Binding CurrentView, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Settings}"
                                 Command="{Binding NavigateToSettingsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš™ï¸" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Settings"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
                
                <!-- App Info -->
                <StackPanel Grid.Row="2" Margin="16,0,16,16">
                    <Separator Margin="0,0,0,12"/>
                    <TextBlock Text="Version 1.0.0"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <ContentControl Grid.Column="1" 
                        Content="{Binding CurrentViewModel}"
                        Margin="0">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vm:ScanViewModel}">
                    <views:ScanView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:HistoryViewModel}">
                    <views:HistoryView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                    <views:SettingsView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
