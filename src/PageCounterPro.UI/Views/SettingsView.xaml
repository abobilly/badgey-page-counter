<UserControl x:Class="PageCounterPro.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PageCounterPro.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource BackgroundBrush}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="Settings" Style="{StaticResource HeaderLabelStyle}"/>
                <TextBlock Text="Configure application preferences and export options."
                           Style="{StaticResource BodyLabelStyle}"
                           Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Export Settings -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Export Settings" 
                               Style="{StaticResource SubheaderLabelStyle}"
                               Margin="0,0,0,16"/>
                    
                    <!-- Export Format -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Export Format"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding ExportFormats}"
                                  SelectedItem="{Binding ExportFormat}"
                                  Style="{StaticResource ModernComboBoxStyle}"
                                  Width="200"
                                  HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <!-- Custom Export Directory -->
                    <StackPanel Margin="0,0,0,0">
                        <TextBlock Text="Export Directory"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Text="{Binding CustomExportDirectory, TargetNullValue='(Default: AppData\\PageCounterPro\\Exports)'}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     IsReadOnly="True"/>
                            
                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding BrowseExportDirectoryCommand}"
                                    Margin="8,0,0,0"/>
                            
                            <Button Grid.Column="2"
                                    Content="Reset"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding ClearCustomExportDirectoryCommand}"
                                    Margin="8,0,0,0"
                                    Visibility="{Binding CustomExportDirectory, Converter={StaticResource NullToVisibilityConverter}}"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Performance Settings -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Performance" 
                               Style="{StaticResource SubheaderLabelStyle}"
                               Margin="0,0,0,16"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Max Parallelism"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding MaxParallelism}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Width="80"
                                     HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="Number of files to process in parallel. Higher values may improve performance but use more system resources."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"
                                   Margin="16,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Page Count Estimation Settings -->
            <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Page Estimation" 
                               Style="{StaticResource SubheaderLabelStyle}"
                               Margin="0,0,0,16"/>
                    
                    <TextBlock Text="These settings affect how pages are estimated for text files and other documents without embedded page counts."
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                            <TextBlock Text="Characters per Page"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding CharactersPerPage}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Width="100"
                                     HorizontalAlignment="Left"/>
                            <TextBlock Text="Default: 1800"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="11"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Lines per Page"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding LinesPerPage}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Width="100"
                                     HorizontalAlignment="Left"/>
                            <TextBlock Text="Default: 50"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="11"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Default Scan Options -->
            <Border Grid.Row="4" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Default Scan Options" 
                               Style="{StaticResource SubheaderLabelStyle}"
                               Margin="0,0,0,16"/>
                    
                    <CheckBox Content="Include subfolders by default"
                              IsChecked="{Binding DefaultIncludeSubfolders}"
                              Style="{StaticResource ModernCheckBoxStyle}"/>
                </StackPanel>
            </Border>
            
            <!-- Save/Reset Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                <Button Content="Save Settings"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding SaveSettingsCommand}"
                        Width="140"/>
                
                <Button Content="Discard Changes"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding DiscardChangesCommand}"
                        Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibilityConverter}}"
                        Margin="12,0,0,0"/>
                
                <Button Content="Reset to Defaults"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ResetToDefaultsCommand}"
                        Margin="12,0,0,0"/>
                
                <TextBlock Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource SuccessBrush}"
                           Margin="16,0,0,0"
                           Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
