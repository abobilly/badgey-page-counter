<UserControl x:Class="PageCounterPro.UI.Views.ScanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PageCounterPro.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource BackgroundBrush}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        <local:NonZeroToVisibilityConverter x:Key="NonZeroToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Scan Folder" Style="{StaticResource HeaderLabelStyle}"/>
            <TextBlock Text="Select a folder to scan for files and calculate page counts."
                       Style="{StaticResource BodyLabelStyle}"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Folder Selection Card -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Select Folder" 
                           Style="{StaticResource SubheaderLabelStyle}"
                           Margin="0,0,0,12"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0"
                             Text="{Binding SelectedFolderPath, Mode=OneWay}"
                             IsReadOnly="True"
                             VerticalAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedFolderPath}" Value="{x:Null}">
                                        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <Button Grid.Column="1"
                            Content="Browse..."
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding SelectFolderCommand}"
                            IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
                            Margin="12,0,0,0"/>
                </Grid>
                
                <!-- Scan Options -->
                <StackPanel Margin="0,16,0,0">
                    <TextBlock Text="Options" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    
                    <CheckBox Content="Include subfolders"
                              IsChecked="{Binding IncludeSubfolders}"
                              IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
                              Style="{StaticResource ModernCheckBoxStyle}"
                              Margin="0,4"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Maximum depth (optional):"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBox Text="{Binding MaxDepth, TargetNullValue=''}"
                                 Width="60"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"/>
                        <TextBlock Text="Leave empty for unlimited"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Action Buttons and Progress -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <StackPanel>
                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Button Content="Start Scan"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding StartScanCommand}"
                            IsEnabled="{Binding CanStartScan}"
                            Width="120"/>
                    
                    <Button Content="Cancel"
                            Style="{StaticResource DangerButtonStyle}"
                            Command="{Binding CancelScanCommand}"
                            Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}"
                            Margin="12,0,0,0"
                            Width="100"/>
                </StackPanel>
                
                <!-- Progress Area -->
                <StackPanel Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar Value="{Binding ProgressPercentage}"
                                 Maximum="100"
                                 IsIndeterminate="{Binding IsIndeterminate}"
                                 Style="{StaticResource ModernProgressBarStyle}"
                                 Margin="0,0,0,8"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="{Binding CurrentFileName}"
                                   TextTrimming="CharacterEllipsis"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"/>
                        
                        <TextBlock Grid.Column="1"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12">
                            <Run Text="{Binding ProcessedCount}"/>
                            <Run Text=" of "/>
                            <Run Text="{Binding TotalCount}"/>
                            <Run Text=" files"/>
                        </TextBlock>
                    </Grid>
                </StackPanel>
                
                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,8,0,0"
                           Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
        
        <!-- Scan Results by Folder -->
        <Border Grid.Row="4" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="Scan Results"
                           Style="{StaticResource SubheaderLabelStyle}"
                           Margin="0,0,0,12"/>
                
                <!-- Folder Groups -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding FolderGroups.Count, Converter={StaticResource NonZeroToVisibilityConverter}}">
                    <ItemsControl ItemsSource="{Binding FolderGroups}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" 
                                        BorderThickness="0,0,0,1"
                                        BorderBrush="{StaticResource BorderBrush}">
                                    <Expander IsExpanded="{Binding IsExpanded}">
                                        <Expander.Header>
                                            <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=Expander}, Path=ActualWidth}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Color accent bar -->
                                                <Border Grid.Column="0" 
                                                        Width="4" 
                                                        CornerRadius="2"
                                                        Background="{Binding AccentBrush}"
                                                        Margin="0,2,8,2"/>
                                                
                                                <!-- Folder name and path -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding FolderName}"
                                                               FontWeight="SemiBold"
                                                               FontSize="14"
                                                               Foreground="{Binding AccentBrush}"/>
                                                    <TextBlock Text="{Binding FolderPath}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               TextTrimming="CharacterEllipsis"
                                                               MaxWidth="400"/>
                                                </StackPanel>
                                                
                                                <!-- File count and pages -->
                                                <StackPanel Grid.Column="2" 
                                                            Orientation="Horizontal" 
                                                            VerticalAlignment="Center"
                                                            Margin="16,0">
                                                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                                                        <Run Text="{Binding FileCount}"/>
                                                        <Run Text=" files"/>
                                                    </TextBlock>
                                                    <TextBlock Text=" â€¢ " Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                                                        <Run Text="{Binding TotalPages}"/>
                                                        <Run Text=" pages"/>
                                                    </TextBlock>
                                                </StackPanel>
                                                
                                                <!-- Open Folder button -->
                                                <Button Grid.Column="3"
                                                        Content="ðŸ“"
                                                        ToolTip="Open Folder"
                                                        Command="{Binding OpenFolderCommand}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        FontSize="14"
                                                        Cursor="Hand"/>
                                                
                                                <!-- Open Export button -->
                                                <Button Grid.Column="4"
                                                        Content="ðŸ“„ Export"
                                                        ToolTip="Open Export File"
                                                        Command="{Binding OpenExportFolderCommand}"
                                                        Style="{StaticResource SecondaryButtonStyle}"
                                                        Padding="8,4"
                                                        FontSize="11"
                                                        Margin="4,0,16,0"/>
                                            </Grid>
                                        </Expander.Header>
                                        
                                        <!-- Files within folder -->
                                        <DataGrid ItemsSource="{Binding Files}"
                                                  Style="{StaticResource ModernDataGridStyle}"
                                                  ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                                                  CellStyle="{StaticResource ModernDataGridCellStyle}"
                                                  Margin="16,8,0,8"
                                                  MaxHeight="300">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="File Name" 
                                                                    Binding="{Binding FileName}" 
                                                                    Width="*"/>
                                                <DataGridTextColumn Header="Type" 
                                                                    Binding="{Binding FileType}" 
                                                                    Width="80"/>
                                                <DataGridTextColumn Header="Pages" 
                                                                    Binding="{Binding PageCount}" 
                                                                    Width="80"/>
                                                <DataGridTextColumn Header="Status" 
                                                                    Binding="{Binding Status}" 
                                                                    Width="60"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Expander>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Empty State -->
                <TextBlock Grid.Row="1"
                           Text="No files processed yet. Start a scan to see results here."
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Visibility="{Binding FolderGroups.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
    
</UserControl>
